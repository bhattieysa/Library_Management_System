<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true" >
            <shape android:shape="rectangle"  >
                <corners android:radius="18dip" />
                <stroke android:width="1dip" android:color="#2274AF2E" />
                <gradient android:angle="-90" android:startColor="#2574AF2E" android:endColor="#2574AF2E"  />
            </shape>
        </item>
        <item android:state_focused="true">
            <shape android:shape="rectangle"  >
                <corners android:radius="18dip" />
                <stroke android:width="1dip" android:color="#4E504D" />
                <solid android:color="#4E504D"/>
            </shape>
        </item>
        <item >
            <shape android:shape="rectangle"  >
                <corners android:radius="18dip" />
                <stroke android:width="4dip" android:color="#FFFFFF" />
                <gradient android:angle="-90" android:startColor="#7074AF2E" android:endColor="#6B74AF2E" />
            </shape>
        </item>
    </selector>

