<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="@dimen/_8sdp"
    app:cardBackgroundColor="@color/text"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Book Name"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/bookname_tv"
                    />

                <TextView
                    android:id="@+id/booksnames"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/bookname_tv"
                    app:layout_constraintTop_toTopOf="@id/bookname_tv"
                    android:textColor="@color/purple_700"
                    android:text="Book Name"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginStart="@dimen/_5sdp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/bookname_tv"
                    app:layout_constraintStart_toStartOf="@id/bookname_tv"
                    android:textColor="@color/black"
                    android:text="Book ID"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/bookid_tv"
                    />

                <TextView
                    android:id="@+id/booksids"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_700"
                    android:text="Book ID"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:layout_constraintStart_toEndOf="@id/bookid_tv"
                    app:layout_constraintTop_toTopOf="@id/bookid_tv"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Subject"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/subject_tv"
                    app:layout_constraintTop_toBottomOf="@id/bookid_tv"
                    app:layout_constraintStart_toStartOf="@id/bookid_tv"
                    />

                <TextView
                    android:id="@+id/bookssubjets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_700"
                    android:text="Subject"
                    android:textSize="@dimen/_15ssp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    app:layout_constraintStart_toEndOf="@id/subject_tv"
                    app:layout_constraintTop_toTopOf="@id/subject_tv"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/booksimageview1"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/profile"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="@dimen/_6sdp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
